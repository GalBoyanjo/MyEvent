<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/eventAddPic"
        android:layout_width="@dimen/circle_size"
        android:layout_height="@dimen/circle_size"
        android:background="@drawable/ic_add_pic"
        android:visibility="visible"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="center"/>


    <com.gal.invitation.Utils.RoundedImageView
        android:id="@+id/eventPicShow"
        android:layout_width="@dimen/circle_btn_size"
        android:layout_height="@dimen/circle_btn_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="1dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="visible"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center"/>


</LinearLayout>