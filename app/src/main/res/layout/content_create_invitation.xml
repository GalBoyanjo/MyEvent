<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_contacts_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gal.invitation.Screens.CreateInvitation"
    tools:showIn="@layout/activity_create_invitation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/round_frame"
            android:fitsSystemWindows="true"
            android:isScrollContainer="true"
            android:orientation="vertical"
            tools:context="com.gal.invitation.Screens.CreateInvitation">



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/eventType"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_weight="0.5"

                    android:background="@drawable/round_edit_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/groom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/bride" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/eventGroom"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_edit_text"
                    android:hint="@string/groom"
                    android:paddingEnd="15dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/eventBride"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_toEndOf="@id/eventGroom"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_edit_text"
                    android:hint="@string/bride"
                    android:paddingStart="15dp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/eventParents"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_edit_text"
                    android:hint="@string/parents"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/date" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="@string/reception_time" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">


                <Button
                    android:id="@+id/eventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_edit_text"
                    android:hint="@string/date"

                    android:textAlignment="center" />

                <Button
                    android:id="@+id/eventTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_toEndOf="@id/eventDate"
                    android:layout_weight="0.5"
                    android:background="@drawable/round_edit_text"
                    android:hint="@string/time"
                    android:textAlignment="center" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_place" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">


                <EditText
                    android:id="@+id/EventPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_weight="0.7"
                    android:background="@drawable/round_edit_text"
                    android:hint="@string/event_place"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/eventPlaceType"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@id/EventPlace"
                    android:layout_weight="0.3"
                    android:background="@drawable/round_edit_text"
                    android:text="Event Place type"
                    android:textAlignment="center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="@string/event_address" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="1">

                <EditText
                    android:id="@+id/EventPlaceAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/round_box_size"
                    android:layout_toEndOf="@id/eventPlaceType"
                    android:layout_weight="1"
                    android:background="@drawable/round_edit_text"
                    android:hint="@string/event_address"
                    android:textAlignment="center" />

            </LinearLayout>


            <EditText
                android:id="@+id/EventText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_edit_text"
                android:gravity="top|start"
                android:hint="@string/free_text"
                android:padding="10dp" />



        </LinearLayout>
    </ScrollView>
</LinearLayout>
