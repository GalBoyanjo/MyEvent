<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gal.invitation.Screens.Profile"
    tools:showIn="@layout/activity_profile"
    android:orientation="vertical"
    android:background="@drawable/profile_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/calendar_margin"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_count_down_days"
                android:layout_width="@dimen/calendar_size"
                android:layout_height="@dimen/calendar_size"
                android:background="@drawable/ic_calendar"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/profile_count_down_days_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/days"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/calendar_margin"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_count_down_hours"
                android:layout_width="@dimen/calendar_size"
                android:layout_height="@dimen/calendar_size"
                android:background="@drawable/ic_calendar"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/profile_count_down_hour_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/hours"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/calendar_margin"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_count_down_minutes"
                android:layout_width="@dimen/calendar_size"
                android:layout_height="@dimen/calendar_size"
                android:background="@drawable/ic_calendar"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/profile_count_down_minute_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/minutes"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/calendar_margin"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/profile_count_down_seconds"
                android:layout_width="@dimen/calendar_size"
                android:layout_height="@dimen/calendar_size"
                android:background="@drawable/ic_calendar"
                android:gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/profile_count_down_second_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/seconds"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="@dimen/circle_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/circle_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorGreenStatus"/>

            <TextView
                android:id="@+id/row_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/green_circle"
                android:minHeight="@dimen/circle_size"
                android:minWidth="@dimen/circle_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/circle_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/circle_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maybe"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorYellowStatus"/>

            <TextView
                android:id="@+id/row_maybe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yellow_circle"
                android:minHeight="@dimen/circle_size"
                android:minWidth="@dimen/circle_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/circle_width"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="@dimen/circle_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorRedStatus"/>

            <TextView
                android:id="@+id/row_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_circle"
                android:minHeight="@dimen/circle_size"
                android:minWidth="@dimen/circle_size"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <include layout="@layout/profile_rhombus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

</LinearLayout>
