<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gal.invitation.Screens.Profile"
    tools:showIn="@layout/activity_profile">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gal.invitation.Screens.Profile"
    tools:showIn="@layout/activity_profile">

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/profile_count_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_status_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/row_yes_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/yes"
            android:gravity="center"
            android:minHeight="@dimen/circle_size"
            android:maxWidth="@dimen/circle_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorGreenStatus"
            android:elevation="5dp"/>

        <TextView
            android:id="@+id/row_maybe_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/maybe"
            android:gravity="center"
            android:minHeight="@dimen/circle_size"
            android:maxWidth="@dimen/circle_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorYellowStatus"
            android:elevation="5dp"  />


        <TextView
            android:id="@+id/row_no_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/no"
            android:gravity="center"
            android:minHeight="@dimen/circle_size"
            android:maxWidth="@dimen/circle_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorRedStatus"
            android:elevation="5dp"  />




    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/row_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/circle_size"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/row_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/green_circle"
            android:gravity="center"
            android:minHeight="@dimen/circle_size"
            android:minWidth="@dimen/circle_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:elevation="5dp" />

        <TextView
            android:id="@+id/row_maybe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/yellow_circle"
            android:gravity="center"
            android:minHeight="@dimen/circle_size"
            android:minWidth="@dimen/circle_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:elevation="5dp"  />


        <TextView
            android:id="@+id/row_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/red_circle"
            android:gravity="center"
            android:minHeight="@dimen/circle_size"
            android:minWidth="@dimen/circle_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:elevation="5dp"  />

    </LinearLayout>
</RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_below="@id/content_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">



    <RelativeLayout
    android:id="@+id/profile_create_invitation_btn_popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/row_status"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/icon_edit_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/ic_edit_invitation"
            android:gravity="center"
            android:minHeight="@dimen/circle_size"
            android:minWidth="@dimen/circle_size"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@id/icon_edit_invitation"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:text="@string/design_invitation"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="11dp" />
    </RelativeLayout>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/profile_contact_list_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_vertical"
        android:layout_marginTop="5dp"
        android:layout_below="@id/profile_create_invitation_btn_popup">

        <Button
            android:id="@+id/profile_yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:background="@drawable/filter_box"
            android:layout_marginEnd="-3dp"/>

        <Button
            android:id="@+id/profile_no_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no"
            android:background="@drawable/filter_box"
            android:layout_marginEnd="-3dp"/>
        <Button
            android:id="@+id/profile_maybe_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maybe"
            android:background="@drawable/filter_box"
            android:layout_marginEnd="-3dp"/>

        <Button
            android:id="@+id/profile_all_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all"
            android:background="@drawable/filter_box"/>


    </LinearLayout>


    <ListView
        android:id="@+id/profile_contact_list"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@id/profile_contact_list_filters"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/profile_contact_list"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp">

        <include layout="@layout/send_message_btn" />
    </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_contact_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        fab:menu_animationDelayPerItem="50"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="@color/colorPrimary"
        fab:menu_colorPressed="@color/colorPrimaryDark"
        fab:menu_colorRipple="@color/colorPrimary"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_paddingBottom="4dp"
        fab:menu_labels_paddingLeft="8dp"
        fab:menu_labels_paddingRight="8dp"
        fab:menu_labels_paddingTop="4dp"
        fab:menu_labels_position="right"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#FFFFFF"
        fab:menu_labels_textSize="14sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_from_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_contacts"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_colorRipple="@color/colorPrimary"
            fab:fab_label="@string/from_contacts"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_new_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_add"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            fab:fab_colorRipple="@color/colorPrimary"
            fab:fab_label="@string/new_contact"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>

    <LinearLayout
        android:id="@+id/dim_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#70000000"
        android:visibility="invisible"
        android:orientation="horizontal">
    </LinearLayout>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_below="@id/content_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/profile_create_invitation_btn"
            android:layout_width="@dimen/circle_btn_size"
            android:layout_height="@dimen/circle_btn_size"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@drawable/background_color_circle">



            <TextView
                android:id="@+id/icon_edit_invitation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_edit_invitation_main"
                android:gravity="center"
                android:minHeight="@dimen/circle_size"
                android:minWidth="@dimen/circle_size"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/icon_edit_invitation_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_edit_invitation_main_plus"
                android:gravity="center"
                android:minHeight="@dimen/circle_size"
                android:minWidth="@dimen/circle_size"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginStart="3dp"/>

            <TextView
                android:id="@+id/txt_message2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@id/icon_edit_invitation2"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/design_invitation"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="11dp" />


        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/profile_create_invitation_btn_design"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_toEndOf="@id/profile_create_invitation_btn"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="invisible"
            android:layout_width="@dimen/circle_btn_size"
            android:layout_height="@dimen/circle_btn_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blue_circle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/icon_edit_invitation_design"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:background="@drawable/ic_edit_invitation"
                android:gravity="center"
                android:layout_marginEnd="5dp"
                android:minHeight="@dimen/circle_size"
                android:minWidth="@dimen/circle_size"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_message_design"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_below="@id/icon_edit_invitation_design"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/edit_invitation"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:layout_marginStart="5dp"/>
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/profile_create_invitation_btn_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="invisible"
            android:layout_width="@dimen/circle_btn_size"
            android:layout_height="@dimen/circle_btn_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blue_circle"
            android:orientation="vertical"
            android:layout_toStartOf="@id/profile_create_invitation_btn">

            <TextView
                android:id="@+id/icon_edit_invitation_pic"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:background="@drawable/ic_edit_invitation_pic"
                android:gravity="center"
                android:minHeight="@dimen/circle_size"
                android:minWidth="@dimen/circle_size"
                android:layout_marginEnd="5dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_message_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_below="@id/icon_edit_invitation_pic"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/design_picture"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:layout_marginStart="5dp"/>
        </RelativeLayout>
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/profile_create_invitation_btn_preview"
            android:layout_below="@id/profile_create_invitation_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:visibility="invisible"
            android:layout_width="@dimen/circle_btn_size"
            android:layout_height="@dimen/circle_btn_size"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/blue_circle"
            android:orientation="vertical">

        <TextView
                android:id="@+id/icon_edit_invitation_preview"
                android:layout_width="@dimen/circle_size"
                android:layout_height="@dimen/circle_size"
                android:background="@drawable/ic_invitation_preview"
                android:gravity="center"
            android:layout_marginEnd="5dp"
            android:minHeight="@dimen/circle_size"
                android:minWidth="@dimen/circle_size"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />


            <TextView
                android:id="@+id/txt_message_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_below="@id/icon_edit_invitation_preview"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="@string/invitation_preview"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:layout_marginStart="5dp"/>
        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>
